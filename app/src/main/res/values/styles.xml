<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#757575</item>
    </style>

    <style name="TextTheme" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:layout_marginLeft">@dimen/dim_8</item>
        <item name="android:layout_marginStart">@dimen/dim_8</item>
        <item name="android:layout_marginTop">@dimen/dim_8</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
